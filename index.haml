!!! 5

%html
  %head
    %meta{ charset: "utf-8" }
    %title Scoreboard
    %link{ rel: "stylesheet", href: "http://cdn.foundation5.zurb.com/foundation.css" }
    %link{ rel: "stylesheet", href: "css/main.css" }
    %link{ rel:"shortcut icon", href: "favicon.ico" }

  %body
    .row
      .small-centered.small-12.medium-8.columns
        %section#app
          %header
            %h1.text-center Rankings
          .row
            .small-8.columns
              %input{ type: "text", placeholder: "name, points",
                      pattern: "^\\w+\\s*,\\s*\\d+\\s*$",
                      required: true }
            .small-4.columns
              %button#add.disabled.radius Add to Rankings
          .row
            .small-12.columns
              %section#scoreboard.hide
                .row
                  .small-12.columns
                    %ul#rankings
                .row
                  .small-12.columns
                    %a#clear.right Clear Rankings

    %script{ type: "text/javascript", src: "http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js" }
    %script{ type: "text/javascript", src: "js/main.js" }
